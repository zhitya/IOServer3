# Local/Industrial Network Environment Configuration
# Copy this file to .env and update with your secure passwords

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=telemetry

# Grafana Configuration
GF_SECURITY_ADMIN_USER=admin
GF_SECURITY_ADMIN_PASSWORD=your_secure_grafana_password

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_secure_pgadmin_password

# Service Passwords (these will be created in the database)
TELEGRAF_DB_PASSWORD=your_secure_telegraf_password
GRAFANA_DB_PASSWORD=your_secure_grafana_db_password

# Security Keys
GRAFANA_SECRET_KEY=your_grafana_secret_key_here
REDIS_PASSWORD=your_secure_redis_password

# Network Configuration
NETWORK_MODE=local
